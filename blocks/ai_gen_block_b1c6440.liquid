{% doc %}
  @prompt
    Create a responsive logo component that maintains consistent size and prominence across desktop and mobile views. The logo should be properly scaled for mobile devices to match the visual impact of the desktop version, ensuring good readability and brand presence on all screen sizes., Create CSS styling to ensure logo displays consistently as a circle shape across both desktop and mobile views with proper responsive design

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-circular-logo-container-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: {{ block.settings.alignment }};
    padding: {{ block.settings.padding_desktop }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-circular-logo-wrapper-{{ ai_gen_id }} {
    display: block;
    line-height: 0;
    transition: transform 0.3s ease, box-shadow 0.3s ease;border-radius: 50%;
    overflow: hidden;
    position: relative;
  }

  .ai-circular-logo-wrapper-{{ ai_gen_id }}:hover {
    transform: scale({{ block.settings.hover_scale | divided_by: 100.0 }});
    box-shadow: 0 {{ block.settings.hover_shadow_blur }}px {{ block.settings.hover_shadow_blur | times: 2 }}px rgba(0, 0, 0, {{ block.settings.hover_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-circular-logo-image-{{ ai_gen_id }} {
    width: {{ block.settings.logo_size_desktop }}px;
    height: {{ block.settings.logo_size_desktop }}px;
    object-fit: cover;object-position: center;display: block;
    border-radius: 50%;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};box-sizing: border-box;
  }

  .ai-circular-logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.logo_size_desktop }}px;
    height: {{ block.settings.logo_size_desktop }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: 50%;
    box-sizing: border-box;position: relative;background-image: radial-gradient(circle at center, #e8e8e8 2px, transparent 2px);
    background-size: 20px 20px;}

  .ai-circular-logo-placeholder-{{ ai_gen_id }} svg {
    width: {{ block.settings.logo_size_desktop | divided_by: 3 }}px;
    height: {{ block.settings.logo_size_desktop | divided_by: 3 }}px;
    opacity: 0.4;
    color: #999;
  }

  .ai-circular-logo-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: -25px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;white-space: nowrap;
    background-color: rgba(255, 255, 255, 0.9);
    padding: 2px 8px;
    border-radius: 12px;
    font-weight: 500;
  }

  @media screen and (max-width: 749px) {
    .ai-circular-logo-container-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_mobile }}px;justify-content: {{ block.settings.alignment_mobile }};
    }

    .ai-circular-logo-image-{{ ai_gen_id }} {
      width: {{ block.settings.logo_size_mobile }}px;
      height: {{ block.settings.logo_size_mobile }}px;
    }

    .ai-circular-logo-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.logo_size_mobile }}px;
      height: {{ block.settings.logo_size_mobile }}px;
    }

    .ai-circular-logo-placeholder-{{ ai_gen_id }} svg {
      width: {{ block.settings.logo_size_mobile | divided_by: 3 }}px;
      height: {{ block.settings.logo_size_mobile | divided_by: 3 }}px;
    }

    .ai-circular-logo-empty-state-{{ ai_gen_id }} {
      font-size: 10px;
      bottom: -20px;
      padding: 1px 6px;
    }
  }

  @media screen and (max-width: 479px) {
    .ai-circular-logo-image-{{ ai_gen_id }} {
      width: {{ block.settings.logo_size_mobile | times: 0.85 }}px;
      height: {{ block.settings.logo_size_mobile | times: 0.85 }}px;
    }

    .ai-circular-logo-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.logo_size_mobile | times: 0.85 }}px;
      height: {{ block.settings.logo_size_mobile | times: 0.85 }}px;
    }

    .ai-circular-logo-placeholder-{{ ai_gen_id }} svg {
      width: {{ block.settings.logo_size_mobile | times: 0.85 | divided_by: 3 }}px;
      height: {{ block.settings.logo_size_mobile | times: 0.85 | divided_by: 3 }}px;
    }
  }

  {% if block.settings.enable_shadow %}
    .ai-circular-logo-image-{{ ai_gen_id }},
    .ai-circular-logo-placeholder-{{ ai_gen_id }} {
      box-shadow: 0 {{ block.settings.shadow_blur }}px {{ block.settings.shadow_blur | times: 2 }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
    }
  {% endif %}
{% endstyle %}<div class="ai-circular-logo-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.logo_link %}
    <a href="{{ block.settings.logo_link }}" class="ai-circular-logo-wrapper-{{ ai_gen_id }}" aria-label="{{ block.settings.logo_alt | default: shop.name | escape }}">
  {% else %}
    <div class="ai-circular-logo-wrapper-{{ ai_gen_id }}">
  {% endif %}{% if block.settings.logo_image %}
    <img
      src="{{ block.settings.logo_image | image_url: width: 400 }}"
      alt="{{ block.settings.logo_alt | default: shop.name | escape }}"
      class="ai-circular-logo-image-{{ ai_gen_id }}"
      width="{{ block.settings.logo_image.width }}"
      height="{{ block.settings.logo_image.height }}"
      loading="lazy"
    >
  {% else %}
    <div class="ai-circular-logo-placeholder-{{ ai_gen_id }}">
      {{ 'image' | placeholder_svg_tag }}<div class="ai-circular-logo-empty-state-{{ ai_gen_id }}">
        Add circular logo
      </div>
    </div>
  {% endif %}

  {% if block.settings.logo_link %}
    </a>
  {% else %}
    </div>
  {% endif %}
</div>


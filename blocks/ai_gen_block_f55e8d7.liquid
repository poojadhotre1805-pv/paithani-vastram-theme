{% doc %}
  @prompt
    Create a product image standardization block that resizes all product images to identical dimensions and applies consistent font styling across all product displays, collections, and product pages

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-standardizer-{{ ai_gen_id }} {
    width: 100%;
  }

  .ai-product-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .ai-product-card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.2s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
  }

  .ai-product-image-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.image_height }}px;
    overflow: hidden;
    background-color: {{ block.settings.image_background }};
  }

  .ai-product-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
    object-position: center;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.image_background }};
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-info-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-product-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-weight: {{ block.settings.title_font.weight }};
    font-size: {{ block.settings.title_font_size }}px;
    line-height: {{ block.settings.title_line_height }};
    color: {{ block.settings.title_color }};
    margin: 0;
    text-decoration: none;
    display: -webkit-box;
    -webkit-line-clamp: {{ block.settings.title_max_lines }};
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .ai-product-title-{{ ai_gen_id }}:hover {
    color: {{ block.settings.title_hover_color }};
  }

  .ai-product-vendor-{{ ai_gen_id }} {
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    font-size: {{ block.settings.vendor_font_size }}px;
    color: {{ block.settings.vendor_color }};
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-product-price-{{ ai_gen_id }} {
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    font-size: {{ block.settings.price_font_size }}px;
    color: {{ block.settings.price_color }};
    margin: 0;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .ai-product-price-sale-{{ ai_gen_id }} {
    color: {{ block.settings.sale_price_color }};
  }

  .ai-product-price-compare-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.7;
    font-size: 0.9em;
  }

  .ai-product-description-{{ ai_gen_id }} {
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    font-size: {{ block.settings.description_font_size }}px;
    line-height: 1.4;
    color: {{ block.settings.description_color }};
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: {{ block.settings.description_max_lines }};
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .ai-product-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    left: 12px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  @media screen and (max-width: 749px) {
    .ai-product-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-product-image-container-{{ ai_gen_id }} {
      height: {{ block.settings.image_height | times: 0.8 }}px;
    }

    .ai-product-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_font_size | times: 0.9 }}px;
    }

    .ai-product-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.price_font_size | times: 0.9 }}px;
    }

    .ai-product-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-product-standardizer-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.selected_products.size > 0 %}
    <ul class="ai-product-grid-{{ ai_gen_id }}">
      {% for product in block.settings.selected_products %}
        <li class="ai-product-card-{{ ai_gen_id }}">
          <div class="ai-product-image-container-{{ ai_gen_id }}">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 800 }}"
                alt="{{ product.featured_image.alt | escape }}"
                class="ai-product-image-{{ ai_gen_id }}"
                loading="lazy"
                width="800"
                height="{{ block.settings.image_height }}"
              >
            {% else %}
              <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}

            {% if product.compare_at_price > product.price %}
              <div class="ai-product-badge-{{ ai_gen_id }}">Sale</div>
            {% endif %}
          </div>

          <div class="ai-product-info-{{ ai_gen_id }}">
            {% if block.settings.show_vendor and product.vendor != blank %}
              <p class="ai-product-vendor-{{ ai_gen_id }}">{{ product.vendor }}</p>
            {% endif %}

            <a href="{{ product.url }}" class="ai-product-title-{{ ai_gen_id }}">
              {{ product.title }}
            </a>

            {% if block.settings.show_price %}
              <div class="ai-product-price-{{ ai_gen_id }}">
                {% if product.compare_at_price > product.price %}
                  <span class="ai-product-price-sale-{{ ai_gen_id }}">{{ product.price | money }}</span>
                  <span class="ai-product-price-compare-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                {% else %}
                  <span>{{ product.price | money }}</span>
                {% endif %}
              </div>
            {% endif %}

            {% if block.settings.show_description and product.description != blank %}
              <p class="ai-product-description-{{ ai_gen_id }}">
                {{ product.description | strip_html | truncate: 120 }}
              </p>
            {% endif %}
          </div>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <div class="ai-product-grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        <div class="ai-product-card-{{ ai_gen_id }}">
          <div class="ai-product-image-container-{{ ai_gen_id }}">
            <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
              {{ 'product-1' | placeholder_svg_tag }}
            </div>
          </div>
          <div class="ai-product-info-{{ ai_gen_id }}"><a href="#" class="ai-product-title-{{ ai_gen_id }}">Sample Product {{ i }}</a>
            <div class="ai-product-price-{{ ai_gen_id }}"><span>$29.99</span>
            </div></div>
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>

{% schema %}

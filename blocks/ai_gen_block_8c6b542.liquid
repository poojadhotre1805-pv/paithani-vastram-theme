{% doc %}
  @prompt
    Create CSS styling to ensure logo displays consistently as a circle shape across both desktop and mobile views with proper responsive design

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-circular-logo-container-{{ ai_gen_id }} {
    display: flex;
    justify-content: {{ block.settings.alignment }};
    align-items: center;
    width: 100%;
    padding: {{ block.settings.padding }}px;
  }

  .ai-circular-logo-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: {{ block.settings.logo_size }}px;
    height: {{ block.settings.logo_size }}px;
    border-radius: 50%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};box-shadow: 0 {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-circular-logo-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};object-position: center;
  }

  .ai-circular-logo-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    position: relative;
  }

  .ai-circular-logo-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    color: #cccccc;
  }

  .ai-circular-logo-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: -30px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    white-space: nowrap;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-circular-logo-container-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_mobile }}px;
    }

    .ai-circular-logo-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.logo_size_mobile }}px;
      height: {{ block.settings.logo_size_mobile }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-circular-logo-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.logo_size_mobile | times: 0.8 }}px;
      height: {{ block.settings.logo_size_mobile | times: 0.8 }}px;
    }
  }
{% endstyle %}<div class="ai-circular-logo-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-circular-logo-wrapper-{{ ai_gen_id }}">
    {% if block.settings.logo_image %}
      <img
        src="{{ block.settings.logo_image | image_url: width:400 }}"
        alt="{{ block.settings.logo_image.alt | default: 'Logo' | escape }}"
        class="ai-circular-logo-image-{{ ai_gen_id }}"
        width="{{ block.settings.logo_size }}"
        height="{{ block.settings.logo_size }}"
        loading="lazy">
    {% else %}
      <div class="ai-circular-logo-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-circular-logo-empty-state-{{ ai_gen_id }}">
          Add your logo
        </div>
      </div>
    {% endif %}
  </div>
</div>


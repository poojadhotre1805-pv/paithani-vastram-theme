{% doc %}
  @prompt
    Create a responsive design block that ensures consistent appearance between desktop and mobile views, with unified styling that maintains the same layout, font sizes, and element positioning across all screen sizes

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-unified-layout-{{ ai_gen_id }} {
    --ai-container-padding: {{ block.settings.container_padding }}px;
    --ai-content-gap: {{ block.settings.content_gap }}px;
    --ai-heading-size: {{ block.settings.heading_size }}px;
    --ai-text-size: {{ block.settings.text_size }}px;
    --ai-button-padding: {{ block.settings.button_padding }}px;
    --ai-border-radius: {{ block.settings.border_radius }}px;
    
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: var(--ai-container-padding);
    background-color: {{ block.settings.background_color }};
    border-radius: var(--ai-border-radius);
    box-sizing: border-box;
  }

  .ai-unified-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: var(--ai-content-gap);
    align-items: {{ block.settings.content_alignment }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-unified-image-container-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.image_max_width }}px;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    border-radius: var(--ai-border-radius);
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-unified-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-unified-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-unified-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-unified-heading-{{ ai_gen_id }} {
    font-size: var(--ai-heading-size);
    color: {{ block.settings.heading_color }};
    margin: 0;
    line-height: 1.2;
    font-weight: 600;
  }

  .ai-unified-text-{{ ai_gen_id }} {
    font-size: var(--ai-text-size);
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-unified-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--ai-button-padding) calc(var(--ai-button-padding) * 1.5);
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border: none;
    border-radius: var(--ai-border-radius);
    font-size: var(--ai-text-size);
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.3s ease;
    min-height: 44px;
    box-sizing: border-box;
  }

  .ai-unified-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-unified-button-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.button_color }};
    outline-offset: 2px;
  }

  .ai-unified-features-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.features_columns }}, 1fr);
    gap: var(--ai-content-gap);
    width: 100%;
  }

  .ai-unified-feature-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: calc(var(--ai-content-gap) * 0.5);
    align-items: {{ block.settings.content_alignment }};
    text-align: {{ block.settings.text_alignment }};
    padding: var(--ai-button-padding);
    background-color: {{ block.settings.feature_background_color }};
    border-radius: var(--ai-border-radius);
  }

  .ai-unified-feature-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background-color: {{ block.settings.icon_background_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
    font-size: calc({{ block.settings.icon_size }}px * 0.5);
    font-weight: bold;
  }

  .ai-unified-feature-title-{{ ai_gen_id }} {
    font-size: calc(var(--ai-text-size) * 1.1);
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-weight: 600;
  }

  .ai-unified-feature-text-{{ ai_gen_id }} {
    font-size: var(--ai-text-size);
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.4;
  }

  @media screen and (max-width: 768px) {
    .ai-unified-features-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.features_columns_mobile }}, 1fr);
    }
  }

  @media screen and (max-width: 480px) {
    .ai-unified-features-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="ai-unified-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-unified-content-{{ ai_gen_id }}">
    {% if block.settings.show_image %}
      <div class="ai-unified-image-container-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 800 }}"
            alt="{{ block.settings.image.alt | escape }}"
            class="ai-unified-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
          >
        {% else %}
          <div class="ai-unified-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.heading != blank %}
      <h2 class="ai-unified-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.text != blank %}
      <div class="ai-unified-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
    {% endif %}

    {% if block.settings.show_button and block.settings.button_text != blank %}
      <a
        href="{{ block.settings.button_link | default: '#' }}"
        class="ai-unified-button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_text }}
      </a>
    {% endif %}

    {% if block.settings.show_features %}
      <div class="ai-unified-features-{{ ai_gen_id }}">
        {% for i in (1..6) %}
          {% assign feature_title_key = 'feature_' | append: i | append: '_title' %}
          {% assign feature_text_key = 'feature_' | append: i | append: '_text' %}
          {% assign feature_icon_key = 'feature_' | append: i | append: '_icon' %}
          
          {% assign feature_title = block.settings[feature_title_key] %}
          {% assign feature_text = block.settings[feature_text_key] %}
          {% assign feature_icon = block.settings[feature_icon_key] %}

          {% if feature_title != blank or feature_text != blank %}
            <div class="ai-unified-feature-{{ ai_gen_id }}">
              {% if feature_icon != blank %}
                <div class="ai-unified-feature-icon-{{ ai_gen_id }}">
                  {{ feature_icon }}
                </div>
              {% endif %}
              
              {% if feature_title != blank %}
                <h3 class="ai-unified-feature-title-{{ ai_gen_id }}">{{ feature_title }}</h3>
              {% endif %}
              
              {% if feature_text != blank %}
                <p class="ai-unified-feature-text-{{ ai_gen_id }}">{{ feature_text }}</p>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>


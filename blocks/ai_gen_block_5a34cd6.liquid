{% doc %}
  @prompt
    Create product image hover effects that work on both desktop and mobile devices - include smooth transitions, zoom effects, overlay animations, and touch-friendly interactions that make product images look professional and engaging

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-image-hover-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    cursor: pointer;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform {{ block.settings.transition_duration }}s ease;
    display: block;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 300px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: {{ block.settings.overlay_color }};
    opacity: 0;
    transition: opacity {{ block.settings.transition_duration }}s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
  }

  .ai-product-overlay-content-{{ ai_gen_id }} {
    color: {{ block.settings.overlay_text_color }};
    text-align: center;
    transform: translateY(20px);
    transition: transform {{ block.settings.transition_duration }}s ease;
    padding: 20px;
  }

  .ai-product-overlay-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.overlay_title_size }}px;
    font-weight: 600;
    margin: 0 0 8px 0;
  }

  .ai-product-overlay-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.overlay_text_size }}px;
    margin: 0;
  }

  .ai-product-badge-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.badge_position_top }}px;
    right: {{ block.settings.badge_position_right }}px;
    background-color: {{ block.settings.badge_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 12px;
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-size: {{ block.settings.badge_text_size }}px;
    font-weight: 600;
    z-index: 2;
    transform: scale(0);
    transition: transform {{ block.settings.transition_duration }}s ease;
  }

  {% if block.settings.effect_type == 'zoom' %}
    .ai-product-image-hover-{{ ai_gen_id }}:hover .ai-product-image-{{ ai_gen_id }} {
      transform: scale({{ block.settings.zoom_scale }});
    }
  {% elsif block.settings.effect_type == 'slide' %}
    .ai-product-image-hover-{{ ai_gen_id }}:hover .ai-product-image-{{ ai_gen_id }} {
      transform: translateX(-10px);
    }
  {% elsif block.settings.effect_type == 'rotate' %}
    .ai-product-image-hover-{{ ai_gen_id }}:hover .ai-product-image-{{ ai_gen_id }} {
      transform: rotate(2deg) scale(1.05);
    }
  {% endif %}

  .ai-product-image-hover-{{ ai_gen_id }}:hover .ai-product-overlay-{{ ai_gen_id }} {
    opacity: 1;
  }

  .ai-product-image-hover-{{ ai_gen_id }}:hover .ai-product-overlay-content-{{ ai_gen_id }} {
    transform: translateY(0);
  }

  .ai-product-image-hover-{{ ai_gen_id }}:hover .ai-product-badge-{{ ai_gen_id }} {
    transform: scale(1);
  }

  @media (hover: none) and (pointer: coarse) {
    .ai-product-image-hover-{{ ai_gen_id }}.ai-touch-active .ai-product-overlay-{{ ai_gen_id }} {
      opacity: 1;
    }

    .ai-product-image-hover-{{ ai_gen_id }}.ai-touch-active .ai-product-overlay-content-{{ ai_gen_id }} {
      transform: translateY(0);
    }

    .ai-product-image-hover-{{ ai_gen_id }}.ai-touch-active .ai-product-badge-{{ ai_gen_id }} {
      transform: scale(1);
    }

    {% if block.settings.effect_type == 'zoom' %}
      .ai-product-image-hover-{{ ai_gen_id }}.ai-touch-active .ai-product-image-{{ ai_gen_id }} {
        transform: scale({{ block.settings.zoom_scale }});
      }
    {% elsif block.settings.effect_type == 'slide' %}
      .ai-product-image-hover-{{ ai_gen_id }}.ai-touch-active .ai-product-image-{{ ai_gen_id }} {
        transform: translateX(-10px);
      }
    {% elsif block.settings.effect_type == 'rotate' %}
      .ai-product-image-hover-{{ ai_gen_id }}.ai-touch-active .ai-product-image-{{ ai_gen_id }} {
        transform: rotate(2deg) scale(1.05);
      }
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-product-overlay-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.overlay_title_size | times: 0.9 }}px;
    }

    .ai-product-overlay-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.overlay_text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}<product-image-hover-{{ ai_gen_id }}
  class="ai-product-image-hover-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.product_image %}<img
      src="{{ block.settings.product_image | image_url: width: 800 }}"
      alt="{{ block.settings.product_image.alt | escape }}"
      class="ai-product-image-{{ ai_gen_id }}"loading="lazy"
      width="{{ block.settings.product_image.width }}"
      height="{{ block.settings.product_image.height }}"
    >
  {% else %}
    <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
      {{ 'product-1' | placeholder_svg_tag }}
    </div>
  {% endif %}

  {% if block.settings.show_overlay %}
    <div class="ai-product-overlay-{{ ai_gen_id }}">
      <div class="ai-product-overlay-content-{{ ai_gen_id }}">
        {% if block.settings.overlay_title != blank %}
          <h3 class="ai-product-overlay-title-{{ ai_gen_id }}">{{ block.settings.overlay_title }}</h3>
        {% endif %}
        {% if block.settings.overlay_text != blank %}
          <p class="ai-product-overlay-text-{{ ai_gen_id }}">{{ block.settings.overlay_text }}</p>
        {% endif %}
      </div>
    </div>
  {% endif %}

  {% if block.settings.show_badge and block.settings.badge_text != blank %}
    <div class="ai-product-badge-{{ ai_gen_id }}">
      {{ block.settings.badge_text }}
    </div>
  {% endif %}
</product-image-hover-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductImageHover{{ai_gen_id}} extends HTMLElement {
      constructor() {
        super();
        this.touchTimeout = null;
        this.isActive = false;
      }

      connectedCallback() {
        this.setupTouchEvents();
      }

      setupTouchEvents() {
        this.addEventListener('touchstart', this.handleTouchStart.bind(this));
        this.addEventListener('touchend', this.handleTouchEnd.bind(this));
        this.addEventListener('touchcancel', this.handleTouchEnd.bind(this));
        document.addEventListener('touchstart', this.handleDocumentTouch.bind(this));
      }

      handleTouchStart(event) {
        event.preventDefault();
        clearTimeout(this.touchTimeout);
        
        if (!this.isActive) {
          this.classList.add('ai-touch-active');
          this.isActive = true;
        }
      }

      handleTouchEnd(event) {
        this.touchTimeout = setTimeout(() => {
          this.classList.remove('ai-touch-active');
          this.isActive = false;
        }, 300);
      }

      handleDocumentTouch(event) {
        if (!this.contains(event.target)) {
          this.classList.remove('ai-touch-active');
          this.isActive = false;
          clearTimeout(this.touchTimeout);
        }
      }

      disconnectedCallback() {
        clearTimeout(this.touchTimeout);
        document.removeEventListener('touchstart', this.handleDocumentTouch.bind(this));
      }
    }

    customElements.define('product-image-hover-{{ ai_gen_id }}', ProductImageHover{{ai_gen_id}});
  })();
</script>


{% doc %}
  @prompt
    Create CSS media queries to make logo display at actual size on mobile devices only, without affecting desktop view

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-logo-display-{{ ai_gen_id }} {
    display: flex;
    justify-content: {{ block.settings.alignment }};
    align-items: center;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-logo-image-{{ ai_gen_id }} {
    max-width: {{ block.settings.desktop_max_width }}px;
    height: auto;
    width: auto;
  }

  .ai-logo-placeholder-{{ ai_gen_id }} {
    max-width: {{ block.settings.desktop_max_width }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px;
    border-radius: 8px;
  }

  .ai-logo-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: auto;
    max-width: 200px;
    opacity: 0.5;
  }

  .ai-logo-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
  }

  @media screen and (max-width: 749px) {
    .ai-logo-image-{{ ai_gen_id }} {
      max-width: none;
      width: {{ block.settings.mobile_actual_width }}px;
      max-height: {{ block.settings.mobile_max_height }}px;
    }

    .ai-logo-placeholder-{{ ai_gen_id }} {
      max-width: none;
      width: {{ block.settings.mobile_actual_width }}px;
      max-height: {{ block.settings.mobile_max_height }}px;
    }
  }
{% endstyle %}<div class="ai-logo-display-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.logo %}
    <img
      src="{{ block.settings.logo | image_url: width: 800 }}"
      alt="{{ block.settings.logo.alt | default: shop.name | escape }}"
      class="ai-logo-image-{{ ai_gen_id }}"
      width="{{ block.settings.logo.width }}"
      height="{{ block.settings.logo.height }}"loading="lazy"
    >
  {% else %}
    <div class="ai-logo-placeholder-{{ ai_gen_id }}">
      {{ 'image' | placeholder_svg_tag }}<div class="ai-logo-empty-state-{{ ai_gen_id }}">
        Add your logo
      </div>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Logo display",
  "settings": [
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Desktop sizing"
    },
    {
      "type": "range",
      "id": "desktop_max_width",
      "min": 50,
      "max": 500,
      "step": 10,
      "unit": "px",
      "label": "Maximum width",
      "default": 200
    },
    {
      "type": "header",
      "content": "Mobile sizing"
    },
    {
      "type": "range",
      "id": "mobile_actual_width",
      "min": 80,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Actual width",
      "default": 150
    },
    {
      "type": "range",
      "id": "mobile_max_height",
      "min": 30,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Maximum height",
      "default": 80
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Logo display"
    }
  ]
}
{% endschema %}
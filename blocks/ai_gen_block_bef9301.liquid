{% doc %}
  @prompt
    Create a responsive hero section that maintains consistent visual proportions between desktop and mobile views. The section should preserve the banner text positioning, image scaling, and overall layout hierarchy across all screen sizes, ensuring the mobile experience closely matches the desktop presentation.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.section_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
  }

  .ai-hero-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-hero-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ block.settings.image_position }};
  }

  .ai-hero-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hero-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 300px;
    opacity: 0.3;
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 6px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;}

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
    max-width: {{ block.settings.content_max_width }}px;
    padding: 40px 20px;
    width: 100%;}

  .ai-hero-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 16px 0;}

  .ai-hero-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.4;
    margin: 0 0 32px 0;opacity: 0.9;
  }

  .ai-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    {% if block.settings.text_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.text_alignment == 'right' %}
      justify-content: flex-end;
    {% else %}
      justify-content: flex-start;
    {% endif %}
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 28px;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    font-size:16px;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    min-width: 140px;
  }

  .ai-hero-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_btn_color }};
    color: {{ block.settings.primary_btn_text_color }};
    border-color: {{ block.settings.primary_btn_color }};
  }

  .ai-hero-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_btn_hover_color }};
    border-color: {{ block.settings.primary_btn_hover_color }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }} {
    background-color: transparent;
    color: {{ block.settings.secondary_btn_text_color }};
    border-color: {{ block.settings.secondary_btn_text_color }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_btn_text_color }};
    color: {{ block.settings.secondary_btn_hover_text_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-hero-section-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_section_height }}px;
    }

    .ai-hero-content-{{ ai_gen_id }} {
      padding: 30px 16px;
      max-width: 100%;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
      margin-bottom: 12px;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_subheading_size }}px;
      margin-bottom: 24px;
    }

    .ai-hero-buttons-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_button_layout }};
      gap: 12px;
    }

    .ai-hero-button-{{ ai_gen_id }} {
      padding: 12px 24px;
      font-size: 15px;
      {% if block.settings.mobile_button_layout == 'column' %}
        width: 100%;
      {% endif %}
    }
  }

  @media screen and (max-width: 480px) {
    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size | times: 0.9 }}px;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_subheading_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-hero-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-background-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width:2000}}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
      >
    {% else %}
      <div class="ai-hero-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}<div class="ai-hero-empty-state-{{ ai_gen_id }}">
          Add a background image to complete your hero section
        </div>
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_overlay %}
    <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-hero-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}

    {% if block.settings.show_buttons %}
      <div class="ai-hero-buttons-{{ ai_gen_id }}">
        {% if block.settings.primary_btn_text != blank %}
          <a
            href="{{ block.settings.primary_btn_link }}"
            class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-primary-{{ ai_gen_id }}"
          >
            {{ block.settings.primary_btn_text }}
          </a>
        {% endif %}

        {% if block.settings.secondary_btn_text != blank %}
          <a
            href="{{ block.settings.secondary_btn_link }}"
            class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-secondary-{{ ai_gen_id }}"
          >
            {{ block.settings.secondary_btn_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

